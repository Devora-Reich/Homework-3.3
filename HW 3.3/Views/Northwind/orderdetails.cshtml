@using HW_3._3.Models
@model NorthwindViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>orderdetails</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row mt-5 justify-content-center">
            <div class="col-md-10">
                <h1 class="text-center">Order Details for Orders Placed in 1997</h1>
                <table class="table table-hover table-striped table-bordered mt-5 w-75 mx-auto">
                    <thead>
                        <tr>
                            <th>Order Id</th>
                            <th>Product Id</th>
                            <th>Unit Price</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (OrderDetails od in Model.OrderDetails)
                        {
                            <tr>
                                <td>@od.OrderId</td>
                                <td>@od.ProductId</td>
                                <td>@od.UnitPrice</td>
                                <td>@od.Quantity</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
